doctype html
html
  head
    title= title
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel="icon" type="image/png" href="data:image/png;base64,iVBORw0KGgo=")

    link(rel='stylesheet', href='/static/unisams/stylesheets/lssc_loader_login.css')

    script(src='/static/unisams/js/preloader.js')
    script(src='/dist/login.js')
    script(src='/dist/login_style.js')

    //
      ***********************************
      ** no js fallback
      ***********************************
    noscript
      link(rel='stylesheet' type='text/css' href='/static/unisams/stylesheets/no-js.css')




  body.no-js
    #wrapper.wrapper-full-height
      .login-page
        .login-page-container
          .login-additional-box
            .additonal-content-container.centered
              .img-container
                img(src="/static/images/logo/unisams-kompakt.jpg")
              //.unisams-label
              //  span.acc1 uni
              //  span.acc2 Sams
                .clear
              .clear
          .login-content
            .login-content-inner.centered
              .login-form-container
                .login-form-greeter
                  .greeter-label
                    | OpenID Login
                  .greeter-content
                    | Melde dich an, um fortzufahren.
                .login-form-content

                  form#login-form01.login-form(action= uid + '/login' method='POST')
                    label#mdcTextField1.mdc-text-field.mdc-text-field--outlined
                      span.mdc-notched-outline
                        span.mdc-notched-outline__leading
                        span.mdc-notched-outline__notch
                          span#label1.mdc-floating-label username
                        span.mdc-notched-outline__trailing
                      input.mdc-text-field__input(type='text', name="username", aria-labelledby='label1' required)


                    label#mdcTextField2.mdc-text-field.mdc-text-field--outlined
                      span.mdc-notched-outline
                        span.mdc-notched-outline__leading
                        span.mdc-notched-outline__notch
                          span#label2.mdc-floating-label Passwort
                        span.mdc-notched-outline__trailing
                      input.mdc-text-field__input(type='password', name="password" , aria-labelledby='label2' required)
                    button.submit-button.mdc-button.mdc-button--raised.next
                      .mdc-button__ripple
                      span.mdc-button__label
                        | login



