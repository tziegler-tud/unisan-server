                                                #eventSettingsGeneral.eventinfo-item
                                        .eventinfo-section.eventinfo-card.card-full.eventwidget-settings
                                            .eventinfo-section-inner
                                                .eventinfo-sectionheader
                                                    span Teilnahme
                                                #eventSettingsParticipants.eventinfo-item
                                        .eventinfo-section.eventinfo-card.card-full.eventwidget-settings
                                            .eventinfo-section-inner
                                                .eventinfo-sectionheader
