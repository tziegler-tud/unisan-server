    script(src="/static/unisams/js/events/event.js")
    script(src="/static/unisams/js/editableTextField.js")
    script(src="/static/unisams/js/editableInputField.js")

    script(src="/lib/editorjs/editor.js")
    link(rel='stylesheet', href='/static/unisams/stylesheets/editor/editor.css')
