    link(rel='stylesheet', href='/static/unisams/stylesheets/lssc_loader_event.css')
    script(src="/static/unisams/js/actions.js")
    script(src="/static/unisams/js/eventActions.js")

    //script(src="/static/unisams/js/events/editEvent.js")
