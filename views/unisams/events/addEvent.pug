extends ../layout

block page_includes
    link(rel='stylesheet', href='/static/unisams/stylesheets/lssc_loader_userprofile.css')
    link(rel='stylesheet', href='/static/unisams/stylesheets/editUser.css')
    link(rel='stylesheet', href='/lib/wickedpicker/stylesheets/wickedpicker.css')
    script(src="/static/unisams/js/eventActions.js")
    script(src="/static/unisams/js/events/addEvent.js")
    script(src="/lib/wickedpicker/src/wickedpicker.js")

    script(src="/lib/fineUploader/fine-uploader.js")
    link(rel='stylesheet', href='/lib/fineUploader/fine-uploader-new.css')

    script(type="text/template" id="qq-template-manual-trigger")
        <div class="qq-uploader-selector qq-uploader" qq-drop-area-text="Drop files here">
        <div class="qq-total-progress-bar-container-selector qq-total-progress-bar-container">
        <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-total-progress-bar-selector qq-progress-bar qq-total-progress-bar"></div>
        </div>
        <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone>
        <span class="qq-upload-drop-area-text-selector"></span>
        </div>
        <div class="buttons">
        <div class="qq-upload-button-selector qq-upload-button">
        <div>Select files</div>
        </div>
        </div>
        <span class="qq-drop-processing-selector qq-drop-processing">
        <span>Processing dropped files...</span>
        <span class="qq-drop-processing-spinner-selector qq-drop-processing-spinner"></span>
        </span>
        <ul class="qq-upload-list-selector qq-upload-list" aria-live="polite" aria-relevant="additions removals">
        <li>
        <div class="qq-progress-bar-container-selector">
        <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
        </div>
        <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
        <img class="qq-thumbnail-selector" qq-max-size="100" qq-server-scale>
        <span class="qq-upload-file-selector qq-upload-file"></span>
        <span class="qq-edit-filename-icon-selector qq-edit-filename-icon" aria-label="Edit filename"></span>
        <input class="qq-edit-filename-selector qq-edit-filename" tabindex="0" type="text">
        <span class="qq-upload-size-selector qq-upload-size"></span>
        <button type="button" class="qq-btn qq-upload-cancel-selector qq-upload-cancel">Cancel</button>
        <button type="button" class="qq-btn qq-upload-retry-selector qq-upload-retry">Retry</button>
        <button type="button" class="qq-btn qq-upload-delete-selector qq-upload-delete">Delete</button>
        <span role="status" class="qq-upload-status-text-selector qq-upload-status-text"></span>
        </li>
        </ul>

        <dialog class="qq-alert-dialog-selector">
        <div class="qq-dialog-message-selector"></div>
        <div class="qq-dialog-buttons">
        <button type="button" class="qq-cancel-button-selector">Close</button>
        </div>
        </dialog>

        <dialog class="qq-confirm-dialog-selector">
        <div class="qq-dialog-message-selector"></div>
        <div class="qq-dialog-buttons">
        <button type="button" class="qq-cancel-button-selector">No</button>
        <button type="button" class="qq-ok-button-selector">Yes</button>
        </div>
        </dialog>

        <dialog class="qq-prompt-dialog-selector">
        <div class="qq-dialog-message-selector"></div>
        <input type="text">
        <div class="qq-dialog-buttons">
        <button type="button" class="qq-cancel-button-selector">Cancel</button>
        <button type="button" class="qq-ok-button-selector">Ok</button>
        </div>
        </dialog>
        </div>



    script.
        window.dockerArgs.activeContainer =  "eventContainer";
        window.dockerArgs.activeElementId =  "addevent";

block content
    #wrapper
        #page-container.page-container
            #page-container-inner.page-container-inner.full-height
                section#sec1
                    #sec-content.subpage-container.center-in-container
                        #content1-heading.sec-heading.subpage-heading.center
                            h3 Neues Event anlegen
                        #content1-text.sec-content
                            .subpage-content.userinfo-container
                                    .userinfo-inner
                                        form.form
                                            .form-section
                                                .form-sectionheader
                                                .form-item.useredit-item(id="eventitem-title")
                                                    label.form-item-label.form-attribute-name.nofloat(for="eventinp-title") Bezeichnung:
                                                    input#eventinp-title.form-inp(name="title" type="text")
                                                    .clear
                                                .form-item.useredit-item(id="eventitem-type")
                                                    label.form-item-label.form-attribute-name.nofloat(for="eventinp-type") Art:
                                                    select#eventinp-type.form-select.common-select(name="type")
                                                        option.form-option Ausbildungsabend
                                                        option.form-option Sanitätswachdienst
                                                        option.form-option Seminar
                                                        option.form-option Anderes
                                                    .clear

                                            .form-section
                                                .form-sectionheader
                                                    span Datum:
                                                .form-item.useredit-item(id="eventitem-date")
                                                    label.form-item-label.form-attribute-name.nofloat(for="eventinp-date") Datum:
                                                    input#eventinp-date.form-inp(name="date" type="date")
                                                    .clear
                                                .form-float
                                                    .form-item.useredit-item.form-griditem(id="eventitem-timeStart")
                                                        label.form-item-label.form-attribute-name.nofloat(for="eventinp-timeStart") von:
                                                        input#eventinp-timeStart.form-inp.timepicker(name="time" type="time" value="19:00")
                                                        .clear
                                                    .form-item.useredit-item.form-griditem(id="eventitem-timeEnd")
                                                        label.form-item-label.form-attribute-name.nofloat(for="eventinp-timeEnd") bis:
                                                        input#eventinp-timeEnd.form-inp.timepicker(name="time" type="time" value="21:00")
                                                        .clear
                                                    .clear
                                            .form-section
                                                .form-sectionheader
                                                    span Beschreibung:
                                                .form-item.useredit-item(id="eventitem-shortdesc")
                                                    label.form-item-label.form-attribute-name.nofloat(for="eventinp-shortdesc") Kurzbeschreibung:
                                                    input#eventinp-shortdesc.form-inp(name="shortdesc" type="text")
                                                    .clear
                                                .form-item.useredit-item(id="useritem-passwordCheck")
                                                    label.form-item-label.form-attribute-name.nofloat(for="eventinp-longdesc") Ausführliche Beschreibung
                                                    textarea#eventinp-longdesc.form-inp(name="longdesc")
                                                    .clear

                            #profilemanagment-menu.subpage-menu
                                #btn01.subpage-menu-btn.float
                                    a.content-link.slim.style2.float(href="/unisams/user")
                                        svg.icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-left") <polyline points="15 18 9 12 15 6"></polyline></svg>
                                        .clear
                                    .clear
                                #addEventFormSubmit.subpage-menu-btn.float
                                    a.content-link.slim.float
                                        span Weiter
                                        svg.icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-right") <polyline points="9 18 15 12 9 6"></polyline></svg>
                                        .clear
                                    .clear



