block page_includes
    link(rel='stylesheet', href='/static/unisams/stylesheets/user.css')
    script(src="/static/unisams/js/qualificationActions.js")
    //script(src="/static/unisams/js/settings.js")
    script(src="/dist/settings.js")



    script.
        //used to tell the bundled js which modules to load.
        window.jsmodule = {
            module: "settings",
            loaders: ["groups"],
        };
        window.dockerArgs.activeContainer = "settingsContainer";
        window.dockerArgs.activeElementId = "settingsRoles";


block content
