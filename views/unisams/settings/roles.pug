                        #content1-text.sec-content
                            .subpage-options
                            .subpage-content
                                ul.userlist.itemlist
                                    li.user-entry.noSelect.borderBottom
                                        .inner
                                            .item-property Bezeichnung
                                            .item-property Beschreibung


                                    each group in groups
                                        li.user-entry.grouplist-entry(id= "groupId"+ group.id data-groupId= group.id)
                                            a.inner(href="/unisams/settings/roles/" + group.id)
                                                .item-property= group.title
                                                .item-property= group.description
