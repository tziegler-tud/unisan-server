                                                                    li.user-entry.userkey-entry(id="userkey-" + combinedKey, data-isarray= true, data-title=title, data-catkey=secKey, data-subkey=key, data-key=combinedKey, data-keyid= val.id, data-value=value)
                                                                        a.inner()
                                                                            .item-property.userkey-entry-title
                                                                                span= title
                                                                            .item-property.userkey-entry-value
                                                                                span= value
