extends ../layout

block page_includes
    link(rel='stylesheet', href='/static/unisams/stylesheets/lssc_loader_userprofile.css')
    script(src="/static/unisams/js/profile.js")
    script(src="/static/unisams/js/updateUser.js")
    script(src="/static/unisams/js/deleteUserTest.js")
    script(src="/static/unisams/js/editUser.js")

    script.
        window.exploreUser = "#{exploreUser}";

block content
    #wrapper
        .container
            section#sec1

                #sec-content.subpage-container
                    #content1-heading.sec-heading.subpage-heading.enlarge
                        h3=exploreUser.firstName + " " + exploreUser.lastName
                    #content1-text.sec-content
                        .subpage-content
                            form#editUserForm.editUserForm.userinfo-container.userForm(action='/unisams/usermod/'+ exploreUser.id method='POST')
                                .userinfo-inner
                                    .userinfo-section
                                        .userinfo-sectionheader
                                            span Allgemeine Daten
                                        .userinfo-item
                                            span Username:
                                            input#userinp-username.userForm-inp(value = exploreUser.username, name="username" type="text")
                                        .userinfo-item
                                            span Vorname:
                                            input#userinp-firstname.userForm-inp(value = exploreUser.firstName, name="firstName" type="text")
                                        .userinfo-item
                                            span Vorname:
                                            input#userinp-lastname.userForm-inp(value= exploreUser.lastName name="lastName" type="text")
                                        .userinfo-item
                                            span Email:
                                            input#userinp-email.userForm-inp(value= exploreUser.email name="email" type="text")

                                    .userinfo-section
                                        .userinfo-sectionheader
                                            span Rechte und Rollen
                                        .userinfo-item
                                            span UniSams login:
                                            span= exploreUser.loginEnabled
                                        .userinfo-item
                                            span Angezeigt auf Website:
                                            span= exploreUser.isDisplayedOnPublic

                                    .userinfo-section
                                        .userinfo-sectionheader
                                            span Weitere Daten
                                        .userinfo-item
                                            span Erstellt am:
                                            span= exploreUser.createdDate

