extends layout

block page_includes
    link(rel='stylesheet', href='/static/public/stylesheets/lssc_loader_impressum.css')
    script(src="static/public/js/contact/init.js")

block content
    #wrapper.content-wrapper
        section#content-top.header-image
            img.img-desktop(src='/static/images/team/header.jpg')
            img.img-mobile(src='/static/images/team/header_mobile.jpg')
            .header-image-overlay
                .overlay-title
                    span Studentischer Sanit&auml;tsdienst der TU Dresden.
                .overlay-content
                    span
                        | Sicher durch den Alltag - Im Ernstfall das Richtige tun. Gemeinsam f&uuml;r ein besseres Leben an der TU Dresden.
        section#sec1.sec-middle.content-section.color-generic
            #content1.sec-content.sec-full-width.sec-nomargin
                #content1-heading.sec-heading
                    span Impressum
                #list01.contact-list-container.style1
                    ul#expanding-list01.contact-list
                        li.contact-entry.expanding
                            .contact-entry-inner
                                .contact-heading
                                    span Betreiber
                                .contact-details.collapsing
                                    .contact-container
                                        span
                                            | Betreiber der Website unisan-dresden.de ist die Hochschulgruppe: Studentischer Sanit&auml;tsdienst der TU Dresden.
                        li.contact-entry.expanding
                            .contact-entry-inner
                                .contact-heading
                                    span Postanschrift
                                .contact-details.collapsing
                                    .contact-container
                                        span Studentischer Sanit&auml;tsdienst der Technischen Universit&auml;t Dresden
                                        span c/o Studentenrat der Technischen Universit&auml;t Dresden
                                        span Helmholtzstr. 10
                                        span 01069 Dresden
                                        span Telefon: 01573 9457519
                                        span
                                            | E-Mail:
                                            a.impressum-link.mail-hidden.mailto.text.force-select(data-prefix='info') info[at]unisan-dresden[dot]de
                                        span
                                            | Internet:
                                            a.impressum-link(href='http://www.unisan-dresden.de') www.unisan-dresden.de
                        li.contact-entry.expanding.collapsed
                            .contact-entry-inner
                                .contact-heading
                                    span Vertretungsberechtigte
                                .contact-details.collapsing
                                    .contact-container
                                        span
                                            | Vertretungsberechtigt sind der Vorsitzende und dessen Stellvertreter. Aktuell sind das:
                                        span Felix Rauschert
                                        span Tom Ziegler
                #list02.contact-list-container.style2
                    span Haftungsausschluss
                    ul#expanding-list02.contact-list
                        li.contact-entry.expanding.collapsed
                            .contact-entry-inner
                                .contact-heading
