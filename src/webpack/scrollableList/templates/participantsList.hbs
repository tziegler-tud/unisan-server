<div class="itemlist-header-container participantslist-top borderBottom">
    <ul class="common-list loglist-top participantslist  itemlist scrollableItemList list-view border scrollableList-top">
        <li class="noSelect rowHeading">
            <div class="inner">
                <div class="item-property scrollableList-header-column userlist-ch name" data-property="user.generalData.lastName.value">Name</div>
                <div class="item-property scrollableList-header-column userlist-ch role" data-property="role">Teilnahme</div>
            </div>
        </li>
    </ul>
</div>
<div class="itemlist-content-container scrollableList-content">
    <ul class="participantslist itemlist scrollableItemList list-view border">
    {{#each listdata}}
        <li class="user-entry noSelect" id='userId{{this.user.id}}' data-userid= {{this.user.id}}>
            <a class="inner noSelect">
                {{#if ../args.allowEdit}}
                    <div class="item-property item-container name">
                        <div class=" userlist-img item-container-element"><img src="/data/uploads/user_images/{{this.user.id}}/{{this.user.id}}.jpg"/></div>
                        <span class=" item-container-element">{{this.user.generalData.firstName.value}} {{this.user.generalData.lastName.value}}</span>
                        <div class="participant-delete icon-delete before-icon" data-userid={{this.user.id}}></div>
                    </div>
                    <div class="item-property role">
                        <select class="common-select participant-role-select" data-userid= {{this.user.id}}>
                            <option class="option-participant" value="participant" {{#if (hasRole this "participant")}}selected{{/if}}>teilnehmend</option>
                            <option class="option-lecturer" value="lecturer" {{#if (hasRole this "lecturer")}}selected{{/if}}>Dozent</option>
                            <option class="option-admin" value="admin" {{#if (hasRole this "admin")}}selected{{/if}}>verantwortlich</option>
                        </select>

                    </div>
                {{else}}
                    <div class="item-property item-container name">
                        <div class=" userlist-img item-container-element"><img src="/data/uploads/user_images/{{this.user.id}}/{{this.user.id}}.jpg"/></div>
                        <span class=" item-container-element">{{this.user.generalData.firstName.value}} {{this.user.generalData.lastName.value}}</span>
                    </div>
                    <div class="item-property role">
                        <span class="item-container-element">{{#if (hasRole this "participant")}}teilnehmend{{/if}}{{#if (hasRole this "lecturer")}}Dozent{{/if}}{{#if (hasRole this "admin")}}verantwortlich{{/if}}</span>
                    </div>
                {{/if}}

            </a>
        </li>
    {{/each}}
    </ul>
</div>


