<div class="gallery-container">
    <ul class="common-list documentlist gallery-view protocol-gallery" id="documentlist-top">
        {{#each listdata}}
            <li class="gallery-item viewKey-item cards-item" data-viewkey={{this.id}}>
                <div class="inner">
<!--                    <div class="image"><img src="/data/uploads/event_images/{{this.id}}/{{this.id}}.jpg"/></div>-->
                    <div class="image-overlay"></div>
                    <div class="item-property title gallery-heading eventcard-heading">
                        {{{this.title.html}}}
                        <div class="gallery-heading-inner date">{{{this.type.value}}}</div>
                        <div class="gallery-heading-inner date">{{{this.dateRangeString}}}</div>
                    </div>
                    <div class="gallery-item-actions">
                        <div class="eventcard-menu-container card-menu-container mdc-menu-surface--anchor">
                            <button class="eventcard-menu-button card-menu-button mdc-icon-button material-icons">
                                <div class="mdc-icon-button__ripple"></div>
                                more_vert
                            </button>
                            <div class="mdc-menu mdc-dropdown-menu mdc-menu-surface">
                                <ul class="mdc-list mdc-list--icon-list" role="menu" aria-hidden="true" aria-orientation="vertical" tabindex="-1">
                                    {{#if ../acl.events.write}}
                                    <li class="mdc-list-item event-show" role="menuitem" data-eventid="{{this._id}}">
                                            <span class="mdc-list-item__graphic material-icons">
                                                edit
                                            </span>
                                        <span class="mdc-list-item__text">Event bearbeiten</span>
                                    </li>
                                    {{else}}
                                        <li class="mdc-list-item event-show" role="menuitem" data-eventid="{{this._id}}">
                                            <span class="mdc-list-item__graphic material-icons">
                                                info
                                            </span>
                                            <span class="mdc-list-item__text">Event anzeigen</span>
                                        </li>
                                    {{/if}}
                                    {{#if ../acl.events.delete}}
                                    <li class="mdc-list-item event-delete" role="menuitem" data-eventid="{{this._id}}">
                                            <span class="mdc-list-item__graphic material-icons">
                                                delete
                                            </span>
                                        <span class="mdc-list-item__text">Event l√∂schen</span>
                                    </li>
                                    {{/if}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
</div>

