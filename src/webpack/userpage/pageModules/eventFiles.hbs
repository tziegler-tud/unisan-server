<div class="eventPage-component eventwidget-material">
    <div class="eventPage-component-inner">
        <div class="eventPage-component-header"><span>Material</span></div>
        <div class="eventPage-component-item eventinfo-item-material" id="eventMaterialEditor">
            <div class="eventinfo-item-inner">
                <div class="eventinfo-material">
                    <div class="eventinfo-material-content"></div>
                    <div class="eventinfo-material-viewContainer">
                        <ul class="eventinfo-material-list mdc-list mdc-list--two-line mdc-list--thumbnail-list">
                            {{#each event.files}}
                                <div class="mdc-list-item-wrapper">
                                    <li class="eventinfo-material-listItem mdc-list-item">
                                        <span class="mdc-list-item__ripple"></span>
                                        <span class="mdc-list-item__graphic">
                                            {{#ifEquals this.thumbnail this.filename}}
                                                <img src="/data/uploads/event_files/{{../event.id}}/thumbnails/{{this.filename}}" />
                                            {{else}}
                                                <img src="{{this.thumbnail}}"/>
                                            {{/ifEquals}}
                                        </span>
                                        <span class="mdc-list-item__text">
                                            <span class="mdc-list-item__primary-text">
                                                {{#if ../args.allowEdit}}
                                                    {{this.filename}}
                                                {{else}}
                                                    <a class="download-button" href="/api/v1/eventmod/{{../event.id}}/files/{{this.filename}}" download>{{this.filename}}</a>
                                                {{/if}}
                                            </span>
                                            <span class="mdc-list-item__secondary-text">
                                                {{this.filetype}} | {{this.humanReadableFileSize}}
                                            </span>
                                        </span>
                                        {{#if ../args.allowEdit}}
                                        <span class="mdc-list-item__meta mdc-menu-surface--anchor">
                                            <button class="material-icons mdc-icon-button" aria-label="Options">more_vert</button>
                                        </span>
                                        {{/if}}
                                    </li>
                                    {{#if ../args.allowEdit}}
                                        <div class="mdc-menu mdc-dropdown-menu mdc-menu-surface">
                                            <ul class="mdc-list mdc-list--icon-list mdc-list--dense" role="menu" aria-hidden="true" aria-orientation="vertical" tabindex="-1">
                                                <li class="mdc-list-item menu-entry__delete" role="menuitem" data-id="{{this.filename}}">
                                                    <span class="mdc-list-item__ripple"></span>
                                                    <span class="mdc-list-item__graphic">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                                </span>
                                                    <span class="mdc-list-item__text">LÃ¶schen</span></li>
                                                <li class="mdc-list-item menu-entry-download" role="menuitem">
                                                    <span class="mdc-list-item__ripple"></span>
                                                    <span class="mdc-list-item__graphic">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download"> <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                                                </span>
                                                    <span class="mdc-list-item__text">Herunterladen
                                                    <a class="download-button" href="/api/v1/eventmod/{{../event.id}}/files/{{this.filename}}" download></a>
                                                </span>
                                                </li>
                                            </ul>
                                        </div>
                                    {{/if}}
                                </div>
                                <li class="mdc-list-divider mdc-list-divider--inset-padding" role="separator"></li>
                            {{/each}}
                        </ul>
                        {{#if args.allowEdit}}
                            <div class="eventinfo-material-uploadContainer">
                                <input id="materialUploadElement" type="file" name="file" /></div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>